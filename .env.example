# MongoDB Connection String
# Replace with your actual MongoDB connection string (Atlas or Local)
MONGODB_URI=mongodb://localhost:27017/smart-presence

# JWT Secret
# Generate a strong random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Base URL (for dynamic API configuration)
# Leave empty for relative paths (default for Next.js API routes in same app)
# Set to full URL if API is on different server (e.g., https://api.example.com)
NEXT_PUBLIC_API_URL=
